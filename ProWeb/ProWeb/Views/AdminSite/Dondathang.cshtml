@model IEnumerable<ProWeb.Models.XEM_DONDATHANG>
@{
    ViewBag.Title = "Dondathang";
    Layout = "~/Views/Shared/_index.cshtml";
}

<div id="content" class="col-lg-12 col-sm-12">
    <!-- content starts -->
    @*<div>
            <ul class="breadcrumb">
                <li>
                    <a href="@Url.Action("TrangChu","AdminSite")">Trang chủ</a>
                </li>
                <li>
                    <a href="#">Sản phẩm</a>
                </li>
            </ul>
        </div>*@

    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-gift"></i> Danh sách đơn hàng</h2>
                    @*<div>
                        <a href="#" style="float:right;padding-bottom:3px" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-plus-sign"></i> Thêm sản phẩm</a>
                    </div>*@
                </div>
                <div class="box-content">

                    @*<div class="alert alert-info">For help with such table please check <a href="http://datatables.net/" target="_blank">http://datatables.net/</a></div>*@
                    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                        <thead>
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Ngày lập</th>
                                <th>Mã khách hàng</th>
                                <th>Tên khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Tình trạng</th>
                                <th>Xác nhận</th>
                                <th style="width:10%;text-align:center">Tùy chọn</th>
                            </tr>
                        </thead>

                        <tbody>     
                            @foreach(var item in Model)
                            {                   
                            <tr>
                                <td>@item.MADH</td>
                                <td>@item.NGAYLAP</td>
                                <td>@item.MAKH</td>
                                <td class="center">@item.TENKH</td>
                                <td class="center">@string.Format("{0:0,0}",@item.TONGTIEN) VNĐ</td>
                                @if(@item.TINHTRANG==false)
                                {
                                    <td class="center">
                                        <span class="label-danger label label-default">Chưa thanh toán</span>
                                    </td>
                                }
                                else
                                {
                                    <td class="center">
                                        <span class="label-primary label label-default">Đã thanh toán</span>
                                    </td>
                                }
                                
                                <td class="center">
                                    <a class="btn btn-primary" title="Xem chi tiết sản phẩm" href="#" style="padding:4px 12px 4px 12px">
                                        <i class="glyphicon glyphicon-check"></i>
                                        Xác nhận
                                    </a>
                                </td>

                                <td class="center">
                                    <a class="btn btn-success" title="Xem chi tiết đơn hàng" href="@Url.Action("Chitietdonhang", "AdminSite", new { id =@item.MADH })" style="padding:4px 12px 4px 12px">
                                        <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                                        @*Chi tiết*@
                                    </a>
                                    <a class="btn btn-danger" title="Xóa đơn hàng" href="#" style="padding:4px 12px 4px 12px">
                                        <i class="glyphicon glyphicon-trash icon-white"></i>
                                        @*Xóa*@
                                    </a>
                                </td>
                            </tr>
                            }
                            
                        

                        </tbody>
                    </table>
                    <ul class="pagination pagination-centered" style="float:right">
                        <li><a href="#">Prev</a></li>
                        <li class="active">
                            <a href="#">1</a>
                        </li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!--/span-->
    </div><!--/row-->
</div>

