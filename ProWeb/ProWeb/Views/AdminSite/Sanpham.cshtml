@model IEnumerable<ProWeb.Models.XEM_SANPHAM>
@{
    ViewBag.Title = "Sanpham";
    Layout = "~/Views/Shared/_index.cshtml";
}
<style>
    tr>th {
        text-align: center;
    }
    p{
        text-align:center;
        margin-top:35px;
    }
   
</style>
<div id="content" class="col-lg-12 col-sm-12">
    <!-- content starts -->
    @*<div>
        <ul class="breadcrumb">
            <li>
                <a href="@Url.Action("TrangChu","AdminSite")">Trang chủ</a>
            </li>
            <li>
                <a href="#">Sản phẩm</a>
            </li>
        </ul>
    </div>*@
    
    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-gift"></i> Danh sách sản phẩm</h2>
                    <div >
                        <a href="@Url.Action("Themsanpham","AdminSite")" style="float:right;padding-bottom:3px" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-plus-sign"></i> Thêm sản phẩm</a>                       
                    </div>
                </div>
                <div class="box-content">
                   
                    @*<div class="alert alert-info">For help with such table please check <a href="http://datatables.net/" target="_blank">http://datatables.net/</a></div>*@
                    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                        <thead>
                            <tr>
                                <th style="width: 9%">Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th width="110">Hình ảnh</th>
                                @*<th>Mô tả</th>*@
                                <th>Loại</th>
                                <th>Hãng</th>
                                <th>Đơn giá</th>
                                <th>Tình trạng</th>
                                <th style="width:12%;text-align:center" >Tùy chọn</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            @foreach(var item in Model)
                            {
                            <tr>
                                <td><p>@item.MASP</p></td>
                                <td><p>@item.TENSP</p></td>
                                <td><img height="100" src="/Content/web/img/@item.HINHANH" /></td>     
                                @*<td>@item.MOTA</td>*@
                                <td class="center"><p>@item.TENLOAI</p></td>
                                <td class="center"><p>@item.TENHANG</p></td>
                                <td class="center"><p>@string.Format("{0:0,0}", @item.DONGIA) VNĐ</p></td>
                                <td class="center">
                                @if(item.TINHTRANG==true)
                                {
                                    <p><span class="label-success label label-default">Còn hàng</span></p>
                                }
                                else
                                {
                                    <p>
                                        <span class="label-danger label label-default">Hết hàng</span>
                                    </p>
                                }

                                </td>
                                <td class="center">
                                    <p>
                                        <a class="btn btn-success" title="Xem chi tiết sản phẩm" href="@Url.Action("CTSP", "AdminSite", new { id =@item.MASP })" style="padding:4px 12px 4px 12px">
                                            <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                                            @*Chi tiết*@
                                        </a>
                                        <a class="btn btn-info" title="Cập nhật sản phẩm" href="@Url.Action("Suasanpham", "AdminSite", new { id =@item.MASP })" style="padding:4px 12px 4px 12px">
                                            <i class="glyphicon glyphicon-edit icon-white"></i>
                                            @*Cập nhật*@
                                        </a>
                                        <a onclick="return confirm('Bạn muốn xóa sản phẩm này?')" class="btn btn-danger" title="Xóa sản phẩm" href="@Url.Action("Xoasanpham", "AdminSite", new {  id =@item.MASP})"  style="padding:4px 12px 4px 12px">
                                            <i class="glyphicon glyphicon-trash icon-white"></i>
                                            @*Xóa*@
                                        </a>
                                    </p>
                                </td>
                            </tr>    
                            }
                       
                                 
                             
                        </tbody>
                    </table>
                    <ul class="pagination pagination-centered" style="float:right">
                        <li><a href="#">Prev</a></li>
                        <li class="active">
                            <a href="#">1</a>
                        </li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!--/span-->
    </div><!--/row-->
</div>
