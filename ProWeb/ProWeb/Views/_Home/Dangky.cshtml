
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/Layout_Home.cshtml";
}

<style>
    #{
        width:50%;
    }
</style>
<div class="main">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index","_Home")">Trang chủ</a></li>
            <li class="active"><a href="">Đăng ký</a></li>

        </ul>
        <!-- BEGIN SIDEBAR & CONTENT -->
        <div class="row margin-bottom-40">
            <!-- BEGIN SIDEBAR -->
            <div class="sidebar col-md-3 col-sm-4">
                @Html.Action("Brand", "_Home")
            </div>
            <!-- END SIDEBAR -->
            <!-- BEGIN CONTENT -->
            <div class="col-md-9 col-sm-9">
                @*<h1>Đăng nhập</h1>*@
                <!-- BEGIN CHECKOUT PAGE -->
                <div class="panel-group checkout-page accordion scrollable" id="checkout-page">
                    <!-- BEGIN CHECKOUT -->
                    <div id="checkout" class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title" style="text-align:center">

                                <a data-toggle="collapse" data-parent="#checkout-page" href="#checkout-content" class="accordion-toggle">
                                    Đăng ký tài khoản
                                </a>
                            </h2>
                        </div>
                        <div id="checkout-content" class="panel-collapse collapse in">
                            <div class="panel-body row">

                                <div class="col-md-12 col-sm-12">

                                    <form role="form" action="#" method="post" >
                                        <div class="form-group" style="width:45%;float:left;margin-left:15px">
                                            <label for="email-login">Tên khách hàng</label>
                                            <input type="text" id="email-login" class="form-control" name="tenkh" required>
                                        </div>
                                        <div class="form-group" style="width: 45%; float: left; margin-left: 15px">
                                            <label for="email-login">Giới tính</label>
                                            <select class="form-control" name="gioitinh" required>
                                                <option value="Nam">Nam</option>
                                                <option value="Nữ">Nữ</option>
                                            </select>
                                           
                                        </div>
                                        <div class="form-group" style="width: 45%; float: left; margin-left: 15px">
                                            <label for="password-login">Ngày sinh</label>
                                            <input type="date" id="password-login" class="form-control" name="ngaysinh" required>
                                        </div>
                                        <div class="form-group" style="width: 45%; float: left; margin-left: 15px">
                                            <label for="email-login">Địa chỉ</label>
                                            <input type="text" id="email-login" class="form-control" name="diachi"required>
                                        </div>
                                        <div class="form-group" style="width: 45%; float: left; margin-left: 15px">
                                            <label for="email-login">Điện thoại</label>
                                            <input type="text" id="email-login" class="form-control"name="dienthoai"required>
                                        </div>
                                        <div class="form-group" style="width: 45%; float: left; margin-left: 15px">
                                            <label for="email-login">Email</label>
                                            <input type="text" id="email-login" class="form-control"name="email"required>
                                        </div>
                                        <div class="form-group" style="width: 45%; float: left; margin-left: 15px">
                                            <label for="email-login">Tên đăng nhập</label>
                                            <input type="text" id="email-login" class="form-control"name="tendangnhap"required>
                                            @ViewBag.tendangnhap
                                        </div>
                                        <div class="form-group" style="width: 45%; float: left; margin-left: 15px">
                                            <label for="email-login">Mật khẩu</label>
                                            <input type="password" id="email-login" class="form-control"name="matkhau"required>
                                        </div>
                                        <hr />
                                        @*<a href="javascript:;">Forgotten Password?</a>*@
                                        <div class="padding-top-20" style="text-align:center">
                                            <button class="btn btn-primary" type="submit">Đăng ký</button>
                                        </div>
                                        <hr>
                                        @*<div class="login-socio">
                                                <p class="text-muted">or login using:</p>
                                                <ul class="social-icons">
                                                    <li><a href="javascript:;" data-original-title="facebook" class="facebook" title="facebook"></a></li>
                                                    <li><a href="javascript:;" data-original-title="Twitter" class="twitter" title="Twitter"></a></li>
                                                    <li><a href="javascript:;" data-original-title="Google Plus" class="googleplus" title="Google Plus"></a></li>
                                                    <li><a href="javascript:;" data-original-title="Linkedin" class="linkedin" title="LinkedIn"></a></li>
                                                </ul>
                                            </div>*@
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END CHECKOUT -->
                </div>
                <!-- END CHECKOUT PAGE -->
            </div>
            <!-- END CONTENT -->
        </div>
        <!-- END SIDEBAR & CONTENT -->
        <!-- BEGIN SIMILAR PRODUCTS -->
        <div class="row margin-bottom-40">
            @Html.Action("Product_Price_Max", "_Home")
        </div>
        <!-- END SIMILAR PRODUCTS -->
    </div>
</div>
